<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhotoActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/photoBtn3"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/ic_camera_enhance_black_18dp"
        android:backgroundTint="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/photoBtn2" />

    <Button
        android:id="@+id/photoBtn4"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/ic_camera_enhance_black_18dp"
        android:backgroundTint="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/photoBtn3" />

    <Button
        android:id="@+id/photoBtn2"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/ic_camera_enhance_black_18dp"
        android:backgroundTint="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/photoBtn1" />

    <Button
        android:id="@+id/photoBtn1"
        style="@android:style/Widget.DeviceDefault.Button"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_camera_enhance_black_18dp"
        android:backgroundTint="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="245dp"
        android:layout_height="55dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/puritan_italic"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toStartOf="@+id/photoBtn1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.342" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="245dp"
        android:layout_height="55dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/puritan_italic"
        app:layout_constraintEnd_toStartOf="@+id/photoBtn2"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="245dp"
        android:layout_height="55dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/puritan_italic"
        app:layout_constraintEnd_toStartOf="@+id/photoBtn3"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="245dp"
        android:layout_height="55dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/puritan_italic"
        app:layout_constraintEnd_toStartOf="@+id/photoBtn4"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="186dp"
        android:layout_height="32dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:max="100"
        />

    <TextView
        android:id="@+id/textViewWait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Please wait until the upload will be completed"
        app:layout_constraintBottom_toBottomOf="@+id/progressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="invisible"/>

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/indicator2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        app:indicatorColor="@color/colorPrimary"
        app:indicatorName="PacmanIndicator"
        app:layout_constraintBottom_toTopOf="@+id/progressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewWait"
        tools:indicatorColor="@color/colorPrimary" />

</android.support.constraint.ConstraintLayout>